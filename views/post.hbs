{{>header}}


<div class="container">
    <div class="right_div">
        <div class="post-block">
            <img class="circle" src="{{post.imgurl}}" alt="avatar" />
            <div class="post-text-block">
                <div id="post-id" hidden="True">{{post.post_id}}</div>
                <div class="post-title grey">{{ post.subject }}<span class="post-topic">{{ post.topic }}</span></div>
                <div class="post-detail grey">{{ post.detail }}</div>
                <div class="post-date grey">{{ this.date_formated }}</div>
            </div>
        </div>
        <div class="reply-block">
            {{#each replies}}
                <div class="post-block">
                <img class="circle reply-avatar" src="{{this.imgurl}}" alt="avatar" />
                <div class="post-text-block">
                    <div class="post-detail grey">{{ this.detail }}</div>
                    </div>
                </div>
            {{/each}}

        </div>

        <textarea type="text" rows="4" id="reply-detail" placeholder="Explain in detail..."></textarea>

        <button id="submitPostBtn" onclick="submitReply()">Post to Timeline</button>

    </div>
</div>

<div id="snackbar"></div>
<script src="/js/home.js" defer></script>
<script src="/js/post.js" defer></script>
